POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# MongoDB (for logs)
MONGO_URI=mongodb://localhost:27017/fraud_logs

# Twilio
TWILIO_ACCOUNT_SID=your_account_sid
